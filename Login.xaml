<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DTIapp.Login">

        <StackLayout Padding="30" VerticalOptions="Center">
            <Label Text="Login" 
               FontSize="32" 
               HorizontalOptions="Center" 
               Margin="0,0,0,20"/>

            <Entry x:Name="usernameEntry" 
               Placeholder="Nome de usuÃ¡rio" 
               Keyboard="Text" 
               Margin="0,0,0,10"/>

            <Entry x:Name="passwordEntry" 
               Placeholder="Senha" 
               IsPassword="True" 
               Margin="0,0,0,20"/>

        <Button
            Text="Entrar" LineBreakMode="WordWrap" HeightRequest="70" BackgroundColor="{AppThemeBinding Light=#F0EBEB,Dark=#2F2F2F}" TextColor="{AppThemeBinding Light=#000,Dark=#FFF}" Clicked="Button_Clicked" />

    </StackLayout>

    </ContentPage>
